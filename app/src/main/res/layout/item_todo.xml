<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <View
        android:id="@+id/viewColorTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:layout_margin="5dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="5dp">


            <TextView
                android:id="@+id/txtshowtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/txtshowcategory"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Task Title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txtshowtask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/txtshowtitle"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Task Subtitle"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtshowcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:layout_marginEnd="5dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:maxWidth="80dp"
                android:text="Category"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtshowtask"
                android:layout_marginTop="15dp"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtshowDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textDate"
                android:text="27-jan-2021"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txtshowtask"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="Time"
                android:textSize="12sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtshowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textDate"
                android:text="27:12 AM"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible"/>



        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>